@model MVC.Models.UsuariosVM.UsuarioDetallesViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h1>Detalles del Usuario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Contraseña</dt>
        <dd class="col-sm-10">@Model.Contrasenia</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.RolNombre</dd>
    </div>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark">Editar</a>

</div>

<a asp-action="Index" class="text-secondary">Volver</a>