@model MVC.Models.EnviosVM.EnvioViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Envío Común</h1>
<hr />

@if (ViewBag.Errores != null)
{
    <div class="alert alert-danger">
        @ViewBag.Errores
    </div>
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger">
        @ViewBag.Mensaje
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroTracking" class="control-label"></label>
                <input asp-for="NumeroTracking" class="form-control" />
                <span asp-validation-for="NumeroTracking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PesoPaquete" class="control-label"></label>
                <input asp-for="PesoPaquete" class="form-control" />
                <span asp-validation-for="PesoPaquete" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoFinalizado" /> @Html.DisplayNameFor(model => model.EstadoFinalizado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinalizacion" class="control-label"></label>
                <input asp-for="FechaFinalizacion" class="form-control" />
                <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAgencia" class="control-label"></label>
                <select asp-for="IdAgencia" class="form-control">
                    <option value="">-- Seleccione agencia --</option>
                   
                </select>
                <span asp-validation-for="IdAgencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEmpleado" class="control-label"></label>
                <select asp-for="IdEmpleado" class="form-control">
                    
                </select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control">
                    
                </select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-secondary">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
