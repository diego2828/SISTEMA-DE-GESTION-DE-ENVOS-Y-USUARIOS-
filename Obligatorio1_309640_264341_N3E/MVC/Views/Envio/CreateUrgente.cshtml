@model MVC.Models.EnviosVM.EnvioUrgenteViewModel

@{
    ViewData["Title"] = "CreateUrgente";
}

<h1>Crear Envío Urgente</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUrgente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroTracking" class="control-label"></label>
                <input asp-for="NumeroTracking" class="form-control" />
                <span asp-validation-for="NumeroTracking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PesoPaquete" class="control-label"></label>
                <input asp-for="PesoPaquete" class="form-control" />
                <span asp-validation-for="PesoPaquete" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoFinalizado" /> @Html.DisplayNameFor(model => model.EstadoFinalizado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinalizacion" class="control-label"></label>
                <input asp-for="FechaFinalizacion" class="form-control" />
                <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEmpleado" class="control-label"></label>
                <select asp-for="IdEmpleado" class="form-control">
                    <option value="">-- Seleccione Empleado --</option>
                   
                </select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
               
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DireccionPostalEspecifica" class="control-label"></label>
                <input asp-for="DireccionPostalEspecifica" class="form-control" />
                <span asp-validation-for="DireccionPostalEspecifica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoSalida" class="control-label"></label>
                <input asp-for="TiempoSalida" class="form-control" />
                <span asp-validation-for="TiempoSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoLLegada" class="control-label"></label>
                <input asp-for="TiempoLLegada" class="form-control" />
                <span asp-validation-for="TiempoLLegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-secondary">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
