@model MVC.Models.EnviosVM.ComentarioViewModel

@{
    ViewData["Title"] = "AgregarComentario";
}

<h1>AgregarComentario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarComentario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mensaje" class="control-label"></label>
                <input asp-for="Mensaje" class="form-control" />
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpleadoEmail" class="control-label"></label>
                <input asp-for="EmpleadoEmail" class="form-control" readonly />
                <span asp-validation-for="EmpleadoEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnvioId" class="control-label"></label>
                <input asp-for="EnvioId" class="form-control"  readonly/>
                <span asp-validation-for="EnvioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-secondary">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
