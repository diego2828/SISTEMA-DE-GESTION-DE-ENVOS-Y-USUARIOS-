@model MVC.Models.EnviosVM.EnvioTrackingViewModel

@{
    ViewBag.Title = "Detalle del Envío";
}

<div class="container mt-4 container mt-4">
    <h2 class="mb-4">Detalle del Envío</h2>

    <table class="table table-bordered w-auto">
        <tbody>
            <tr>
                <th scope="row">Tracking</th>
                <td>@Model.NumeroTracking</td>
            </tr>
            <tr>
                <th scope="row">Peso</th>
                <td>@Model.PesoPaquete kg</td>
            </tr>
            <tr>
                <th scope="row">Estado Finalizado</th>
                <td>@(Model.EstadoFinalizado ? "Sí" : "No")</td>
            </tr>
            <tr>
                <th scope="row">Fecha de Finalización</th>
                <td>@(Model.FechaFinalizacion?.ToString("dd/MM/yyyy") ?? "-")</td>
            </tr>
        </tbody>
    </table>

    <h4 class="mt-5">Seguimientos / Comentarios</h4>
    @if (Model.Comentarios?.Any() == true)
    {
        <table class="table table-striped table-bordered w-auto">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Comentario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comentario in Model.Comentarios)
                {
                    <tr>
                        <td>@comentario.EmpleadoEmail</td>
                        <td>@comentario.Mensaje</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-secondary">No hay comentarios.</div>
    }
</div>